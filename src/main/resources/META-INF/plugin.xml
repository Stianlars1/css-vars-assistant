<idea-plugin url="https://github.com/stianlars1/css-vars-assistant">
  <!-- identity -->
  <id>com.stianlarsen.css-variables-assistant</id>
  <name>CSS Variables Assistant</name>
  <version>1.0.0</version>
  <vendor email="stian.larsen@mac.com" url="https://github.com/stianlarsen/css-vars-assistant">
    StianLarsen
  </vendor>

  <!-- description shown on the Marketplace page -->
  <description><![CDATA[
    <h2>CSSVariablesAssistant</h2>
    <p>
      Supercharge your CSS custom properties in WebStorm and IntelliJ-based IDEs:
    </p>
    <ul>
      <li><b>Smart Autocomplete</b> inside <code>var(--…)</code></li>
      <li><b>Quick Documentation</b> (Ctrl+Q) showing value, description & color swatch</li>
      <li><b>JSDoc‑style</b> comment support (<code>@name</code>, <code>@description</code>, <code>@example</code>)</li>
      <li><b>Sorted suggestions</b> by value (largest first)</li>
    </ul>
    <p>
      Works in CSS, SCSS, SASS, LESS, JavaScript/TypeScript, and JSX/TSX files.
    </p>
  ]]></description>

  <change-notes><![CDATA[
    <h3>1.0.0</h3>
    <ul>
      <li>Production release: v1.0.0</li>
      <li>Autocomplete only in <code>var(…)</code>, sorted by CSS value (high→low)</li>
      <li>Hover & Quick‑Docs with color swatch and comment parsing</li>
      <li>Removed <code>@value</code> override tags—always shows real CSS value</li>
    </ul>

    <h3>0.1.2 → 1.0.0</h3>
    <ul>
      <li>Flipped suggestion order: largest first</li>
      <li>Minor bugfixes and context‑checks improved</li>
    </ul>
  ]]></change-notes>



  <!-- which IDEs / ranges we support -->
  <idea-version since-build="241" until-build="241.*"/>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.css</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- your indexer & completion -->
    <fileBasedIndex implementation="cssvarsassistant.index.CssVariableIndex"/>

    <completion.contributor language="CSS"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="SCSS"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="SASS"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="LESS"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="JavaScript"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="TypeScript"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="JSX Harmony"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>
    <completion.contributor language="TSX Harmony"
                            implementationClass="cssvarsassistant.completion.CssVariableCompletion"
                            order="first"/>

    <!-- override built‑in CSS/SCSS docs -->
    <lang.documentationProvider
            language="CSS"
            implementationClass="cssvarsassistant.documentation.CssVariableDocumentation"
            order="first"/>
    <lang.documentationProvider
            language="SCSS"
            implementationClass="cssvarsassistant.documentation.CssVariableDocumentation"
            order="first"/>
    <lang.documentationProvider
            language="SASS"
            implementationClass="cssvarsassistant.documentation.CssVariableDocumentation"
            order="first"/>
    <lang.documentationProvider
            language="LESS"
            implementationClass="cssvarsassistant.documentation.CssVariableDocumentation"
            order="first"/>
  </extensions>
</idea-plugin>
